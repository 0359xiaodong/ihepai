<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/typeface_bglayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/type_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="1.设置字体样式"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/typefaceview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:divider="@color/item_white"
        android:dividerHeight="1px" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="vertical" >

        <TextView
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="2.设置字体阴影"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/ck_choseshadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/ck_shadow_bg"
                android:button="@null"
                android:checked="true"
                android:padding="8dp"
                android:shadowColor="#181818"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="4"
                android:text="合拍"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/ck_nochoseshadow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ck_shadow_bg"
                android:button="@null"
                android:padding="8dp"
                android:text="合拍"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/wangqiong/Documents/studioworkspace/LetPapa/letPapa/src/main/res/layout/popchose_typeface.xml -->