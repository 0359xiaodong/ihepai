<?xml version="1.0" encoding="utf-8"?>
<com.wq.letpapa.customview.StickyScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp" >

            <RelativeLayout
                android:id="@+id/info_layout"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="28dp"
                    android:src="@drawable/psb2" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/girl"
                    android:gravity="center_vertical"
                    android:text="王琼的名字"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/info_layout" />

            <ImageView
                android:id="@+id/iv_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:clickable="true"
                android:src="@drawable/setting" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_toLeftOf="@+id/iv_fav"
                android:gravity="center"
                
                android:orientation="vertical" >

                <TextView
                android:textSize="@dimen/smll_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="354"
                    android:textColor="@color/white" />

                <TextView
                    android:textSize="@dimen/smll_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="关注"
                    android:textColor="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_toRightOf="@+id/iv_fav"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12354"
                    android:textSize="@dimen/smll_txt"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="3dp"
                    android:text="粉丝"
                    android:textSize="@dimen/smll_txt"
                    android:textColor="@color/white" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="38dp"
            android:background="@color/theme_bg"
            android:orientation="horizontal"
            android:tag="sticky" >

            <View
                android:id="@+id/line"
                android:layout_width="2px"
                android:layout_height="32px"
                android:layout_centerInParent="true"
                android:background="@color/e5"
                android:visibility="invisible" />

            <RadioButton
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:layout_toLeftOf="@+id/line"
                android:background="@drawable/sec_bg"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="我的合拍"
                android:textColor="@color/txt_black" />

            <RadioButton
                android:id="@+id/rb2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/line"
                android:background="@drawable/sec_bg"
                android:button="@null"
                android:gravity="center"
                android:text="我参与的"
                android:textColor="@color/txt_black" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="#999999" />
        </RelativeLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!--
            <com.wq.letpapa.customview.MyPageView
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View 
                android:id="@+id/empty_view"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                />
            -->

            <com.wq.letpapa.customview.WQListView
                android:id="@+id/wQListView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.wq.letpapa.customview.WQListView>

            <ProgressBar
                android:padding="100dp"
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
        <!--
        <com.wq.letpapa.customview.WQListView
            android:id="@+id/wQListView1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:entries="@array/data" >
        </com.wq.letpapa.customview.WQListView>
        -->
    </LinearLayout>

